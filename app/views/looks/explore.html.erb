<div class="container mt-3" data-controller="toggle">
  <div class="top-show">
    <div class="button-back">
      <%= link_to today_path do %>
        <h5><i class="fa-solid fa-arrow-right fa-rotate-180"></i></h5>
      <% end %>
    </div>
    <div class="button-switch" data-action="click->toggle#switchDisplay" data-toggle-target="title">Look</div>
  </div>
  <form class="w-100 d-block" action="/outfits/create" method="POST">
    <div class="look-details">
      <div class="thumbnail hidden" data-toggle-target="thumbnail">
        <%= cl_image_tag @look.photo.key %>
      </div>
      <div class="row matching-pieces" data-toggle-target="matchingPieces">
        <input type="text" name='look_id' value='<%= @look.id %>' hidden>
        <% @pieces_by_cat.each do |category, pieces| %>
          <%= category.name %>
          <div class="swiper outfits-swiper"
               data-controller="outfitsswiper"
               data-outfitsswiper-loop-value="true"
               data-outfitsswiper-slides-per-view-value="1">
            <div class="swiper-wrapper pieces-list-item justify-content-center">
              <% pieces.each_with_index do |piece, index| %>
                <div class="swiper-slide outfits-swiper-slide">
                  <label for="piece<%= piece.id %>">
                    <%= cl_image_tag piece.photo.key %>
                    <h6><%= piece.name %></h6>
                  </label>
                  <% if index.zero? %>
                    <input type="checkbox" checked="true" name='pieces[]' id="piece<%= piece.id %>" value="<%= piece.id %>">
                  <% else %>
                    <input type="checkbox" name='pieces[]' id="piece<%= piece.id %>" value="<%= piece.id %>">
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <input type="submit" value="Save">
  </form>
</div>
