
<div class="container mt-3">
  <div class="button-back">
    <%= link_to today_path do %>
      <h5><i class="fa-solid fa-arrow-right fa-rotate-180"></i></h5>
    <% end %>
    <%#= link_to look_outfit_index_path(@outfit), data: { turbo_method: :patch } %>
  </div>
  <div>
  <%#= form_for(@outfit) do |f| %>
    <%# <div class="field"> %>
      <%#= f.label :key %>
      <%#= f.text.select hash[:key] %>
    </div>

    <%# <div class="actions"> %>
      <%#= f.submit %>
    </div>
  <%# end %>
  </div>
  <div class="look-details">
    <div class="thumbnail">
      <%= cl_image_tag @look.photo.key %>
    </div>
    <div class="row matching-pieces">
      <p>Match this look</p>
      <% @potential_pieces.each do |piece| %>
        <div class="col-md-3 mb-4">
          <div class="piece-swipe-card justify-content-center">
            <%= cl_image_tag piece.photo.key %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
