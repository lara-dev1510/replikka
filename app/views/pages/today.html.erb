<div class="container">
  <div class="row">
    <p>Here are 3 options of look inspirations for today</p>
    <% @looks.each do |look| %>
      <div class="col-md-3 mb-4">
        <div class="card-trip justify-content-center">
          <%= cl_image_tag look.photo.key %>
        </div>
      <%= link_to "Reject", reject_path(look), class: "btn btn-outline-danger", data: { turbo_method: :patch } %>
      <%= link_to "Add as favorite", favorite_path(look), class: "btn btn-outline-info", data: { turbo_method: :patch } %>
      </div>
    <% end %>
  </div>
</div>
