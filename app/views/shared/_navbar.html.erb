<% if user_signed_in? %>
  <div data-controller="navbar">
    <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
      <div class="w-100 d-flex align-items-center justify-content-between">
        <div class="lateral-navbar d-flex align-items-center justify-content-around"
             style="width:calc(50vw - 70px);">
          <% link_to pieces_path, class: "nav-link navbar-icon #{"active" if controller_name == "pages" && action_name == "pieces"}" do %>
            <i class="fa-solid fa-house"></i>
          <% end %>
          <%= link_to generate_path, class: "nav-link navbar-icon #{"active" if controller_name == "pages" && action_name == "generate"}" do %>
            <i class="fa-solid fa-shirt"></i>
          <% end %>
        </div>
        <div class="w-100 d-flex align-items-center justify-content-around" style='height: 68px;position:absolute;bottom:0;'>
          <%= link_to today_path, class: "nav-link middle-icon #{"active" if controller_name == "pages" && action_name == "today"}" do %>
            <i class="fa-solid fa-wand-magic-sparkles"></i>
          <% end %>
          <%= image_tag 'navbar_circle.svg', style:'width:145px;' %>
        </div>
        <div class="lateral-navbar d-flex align-items-center justify-content-around"
             style="width:calc(50vw - 70px);">
          <%= link_to favorites_path, class: "nav-link navbar-icon #{"active" if controller_name == "looks" && action_name == "favorites"}" do %>
            <i class="fa-solid fa-bookmark"></i>
          <% end %>
          <% link_to destroy_user_session_path, class: "nav-link navbar-icon", data: { turbo_method: :delete} do %>
            <i class="fa-solid fa-user"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>

